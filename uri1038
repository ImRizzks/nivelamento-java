import java.util.Locale;
import java.util.Scanner;

 // Com base na tabela abaixo, escreva um programa que 
// leia o c√≥digo de um item e a quantidade deste item. 
// A seguir, calcule e mostre o valor da conta a pagar.
public class Main {
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		double codigo = sc.nextDouble();
		double quantidade = sc.nextDouble();
		
		if (codigo == 1) {
			System.out.printf("Total: R$ %.2f%n", quantidade * 4);
		}
		else {
			if (codigo == 2) {
				System.out.printf("Total: R$ %.2f%n", quantidade * 4.5);
			}
			else {
				if (codigo == 3) {
					System.out.printf("Total: R$ %.2f%n", quantidade * 5);
				}
				else {
					if (codigo == 4) {
						System.out.printf("Total: R$ %.2f%n", quantidade * 2);
					}
					else {
						if (codigo == 5) {
							System.out.printf("Total: R$ %.2f%n");
						}
					}
				}
			}
		}
		
		
		
		
		
		
		
		sc.close();
		} 
	}
